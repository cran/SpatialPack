citHeader("To cite SpatialPack in publications use:")

citEntry(entry="Book",
  title = "Spatial Relationships Between Two Georeferenced Variables: with Applications in R",
  author = personList(as.person("R. Vallejos"),
                      as.person("F. Osorio"),
                      as.person("M. Bevilacqua")),
  publisher = "Springer",
  address   = "New York",
  year      = 2018,
  url       = "http://srb2gv.mat.utfsm.cl",
  textVersion =
    paste("Vallejos, R., Osorio, F., Bevilacqua, M. (2018+).",
      "Spatial Relationships Between Two Georeferenced Variables: with Applications in R.",
      "Springer, New York.")
)
